{
    "name": "joseowino/Hazina",
    "description": "A personal finance tracking application built with PHP and SQLite",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "ext-sqlite3": "*",
        "ext-pdo_sqlite": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    }
}
